page{
  background-color: rgb(248, 246, 246);
}
.head {
  border-top-right-radius: 28rpx;
  border-top-left-radius: 28rpx;
  width: 90%;
  height: 200rpx;
  margin-top: 30rpx;
  margin-left: 35rpx;
  background-color: white;
  display: flex;
}
.head image{
  border-radius: 50rpx;
  border-block-color: teal;
  margin-top: 25rpx;
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
}
