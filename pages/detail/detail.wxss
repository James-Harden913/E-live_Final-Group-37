  position: absolute;
}
.head #price1{
  left: 480rpx;
  margin-top: 60rpx;
  font-size: 30rpx;
  color: rgb(201, 201, 201);
  position: absolute;
}
.head #price2{
  left: 570rpx;
  margin-top: 60rpx;
  font-size: 30rpx;
  color: rgb(8, 212, 19);
  position: absolute;
}
.detail_frame {
  border-bottom-right-radius: 28rpx;
  border-bottom-left-radius: 28rpx;
  width: 90%;
  height: 1000rpx;
  margin-top: 30rpx;
  margin-left: 35rpx;
  background-color: white;
} 
.detail_frame #from, #to{
  font-size: 35rpx;
  margin-left: 20rpx;
  padding: 10rpx;
}

.detail_frame #description{
  margin-left: 30rpx;
  font-size: 35rpx;
  word-break: break-all;
}
